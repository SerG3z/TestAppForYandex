<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/layout_margin"
    >

    <ImageView
        android:id="@+id/item_list_image"
        android:layout_width="@dimen/preview_image_size"
        android:layout_height="@dimen/preview_image_size"
        android:src="@android:drawable/gallery_thumb" />

    <TextView
        android:id="@+id/item_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_toRightOf="@id/item_list_image"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size_text_item_name"
        android:text="@string/name_autor" />

    <TextView
        android:id="@+id/item_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_list_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_toRightOf="@id/item_list_image"
        android:text="@string/type_music" />

    <TextView
        android:id="@+id/item_list_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:layout_marginTop="33dp"
        android:layout_below="@id/item_list_type"
        android:layout_alignLeft="@+id/item_list_type" />

</RelativeLayout>